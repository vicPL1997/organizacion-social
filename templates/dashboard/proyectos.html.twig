{% extends 'navegador.html.twig' %}


    {% block title %}
        {{ parent() }} - Dashboard
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
    <link href="{{ asset('vendor/fonts/circular-std/style.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('libs/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('vendor/fonts/fontawesome/css/fontawesome-all.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/datatables/css/dataTables.bootstrap4.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/datatables/css/buttons.bootstrap4.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/datatables/css/select.bootstrap4.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/datatables/css/fixedHeader.bootstrap4.css') }}">
{% endblock %}

{% block body %}
    {{ parent() }}
    <!-- ============================================================== -->
    <!-- wrapper  -->
    <!-- ============================================================== -->
    <div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <!-- ============================================================== -->
            <!-- pageheader  -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Panel de administración </h2>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/dashboard" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Todos los proyectos</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader  -->
            <!-- ============================================================== -->
            <div class="ecommerce-widget">

                <div class="row">
                    <!-- ============================================================== -->

                    <!-- ============================================================== -->

                    <!-- recent orders  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Todos los proyectos</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered second">
                                <thead>
                                <tr >
                                    <th class="border-0">Nombre</th>
                                    <th class="border-0">Sede del proyecto</th>
                                    <th class="border-0">Zona de actuación</th>
                                    <th class="border-0">Total de participantes</th>
                                    <th class="border-0">Gasto total</th>
                                    <th class="border-0">Fecha de inicio</th>
                                    <th class="border-0">Actividad</th>
                                    <th class="border-0">Ver proyecto</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ac in proyectos %}
                                    <tr >
                                        <td>{{ ac.nombre }}</td>
                                        <td>{{ ac.sede.localizacion }}</td>
                                        <td>{{ ac.zonaActuacion }}</td>
                                        <td>{{ ac.totalParticipantes }}</td>
                                        <td>{{ ac.totalGasto }} €</td>
                                        <td>{{ ac.fechaInicio  | date('d-m-Y')}}</td>
                                        {% if ac.activo == "Activo" %}
                                            <td style="color: green;"><b>• {{ ac.activo }}</b></td>
                                        {% else %}
                                            <td style="color: red;"><b>• {{ ac.activo }}</b></td>
                                        {% endif %}
                                        <td><button title="Ver proyecto"  onclick="window.location.href='{{ path('verProyecto',{id:ac.id}) }}'"class="btn  p-1 rounded fa-lg my-1" style="background-color: green;"><i class="fas fa-eye"></i></button>
                                        </td>
                                            </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end recent orders  -->


                    <!-- ============================================================== -->
                    <!-- ============================================================== -->
                    <!-- customer acquistion  -->
                    <!-- ============================================================== -->

                    <!-- ============================================================== -->
                    <!-- end customer acquistion  -->
                    <!-- ============================================================== -->
                </div>
                <div class="row">

                    <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12 col-5">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Total proyectos en la organización</h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1">{{ totalProyectos }}</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            Organización Social © 2022 Concept. Panel de administración.
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                <a href="javascript: void(0);">Sobre Nosotros</a>
                                <a href="javascript: void(0);">Soporte</a>
                                <a href="javascript: void(0);">Contacto</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    </div>
{% endblock %}
